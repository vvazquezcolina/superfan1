{
  "name": "mandala-wallet",
  "version": "1.0.0",
  "description": "Mandala Wallet PoC - Digital wallet with geolocation and gamification",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:web-console": "cd apps/web-console && npm run dev",
    "dev:pwa-client": "cd apps/pwa-client && npm run dev",
    "dev:api-gateway": "cd apps/api-gateway && npm run dev",
    "dev:wallet-service": "cd services/wallet-service && npm run dev",
    "dev:auth-service": "cd services/auth-service && npm run dev",
    "dev:geofence-service": "cd services/geofence-service && npm run dev",
    "dev:notification-service": "cd services/notification-service && npm run dev",
    "dev:xetux-proxy": "cd services/xetux-proxy && npm run dev",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf node_modules apps/*/node_modules services/*/node_modules shared/*/node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "cd services/wallet-service && npm run db:migrate",
    "db:seed": "cd services/wallet-service && npm run db:seed"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Mandala Wallet Team",
  "license": "MIT"
} 